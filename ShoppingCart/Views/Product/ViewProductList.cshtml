@model ShoppingCart.Models.Objects.ProductListViewModel

@{
    ViewBag.Title = "Products";
}

<div class="col-md-2">
    <h3>@Html.DisplayFor(model => model.Products[0].Type.Name)</h3>
</div>

<div class="col-md-10">
    <h3></h3>

    @foreach (var product in Model.Products)
    {
        <div class="col-md-4">
            <div class="product-container">
                @Html.Partial("_ProductThumb", product)
            </div>
        </div>
    }
</div>
