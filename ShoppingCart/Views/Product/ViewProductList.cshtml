@model ShoppingCart.Models.Objects.ProductListViewModel

@{
    ViewBag.Title = "Products";
}

<div class="col-md-2">
    <h3>@Html.DisplayFor(model => model.Products[0].Type.Name)</h3>
</div>

<div class="col-md-10">
    <h3></h3>

    @foreach (var product in Model.Products)
    {
        <div class="col-md-2">
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                @Html.AntiForgeryToken()
 
                <div class="col-md-5">
                    <div class="product-container">
                        @Html.Partial("_ProductThumb", product)
                        <div class="form-group">
                            @Html.HiddenFor(model => product.Id)
                            <div>
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div>
                                <input type="submit" value="Add To Cart" class="btn-add-to-cart" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
